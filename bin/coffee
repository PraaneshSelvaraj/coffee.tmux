#!/usr/bin/env bash

COFFEE_DIR="$HOME/.local/share/coffee"
PYTHON="$COFFEE_DIR/.venv/bin/python"

if [ ! -x "$PYTHON" ]; then
  echo "Coffee error: Python venv not found."
  echo "Run:"
  echo "  cd ~/.local/share/coffee"
  echo "  python3 -m venv .venv"
  echo "  .venv/bin/pip install -r requirements.txt"
  exit 1
fi

exec "$PYTHON" "$COFFEE_DIR/cli/main.py" "$@"
